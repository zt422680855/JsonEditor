<idea-plugin>
  <id>com.zt.json-editor</id>
  <name>JSON Editor</name>
  <version>1.2</version>
  <vendor email="hj_zhengt@163.com" url="https://me.csdn.net/">zhengtao</vendor>

  <description><![CDATA[
      JSON visual editing, support JSON dynamic add, modify, delete nodes and format functions.<br>
    ]]></description>

  <change-notes><![CDATA[
      For the first time, there may be some small bugs. Hope more support.<br>
    ]]>
  </change-notes>

  <depends>com.intellij.modules.platform</depends>

  <idea-version since-build="173.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="JSON Editor" icon="/icons/main-icon.svg" anchor="right" factoryClass="com.jsoneditor.JsonEditor" />
  </extensions>

